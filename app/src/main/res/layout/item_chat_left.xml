<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_chat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="290dp"
        android:fontFamily="@font/princess_medium"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_received"/>

    <TextView
        android:id="@+id/tv_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/princess_medium"
        android:textSize="12sp"
        android:layout_marginStart="2dp"
        android:textColor="@color/chatTimeColor"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/tv_chat_text"
        android:layout_alignBottom="@+id/tv_chat_text"/>

</RelativeLayout>